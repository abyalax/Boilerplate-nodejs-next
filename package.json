{
  "name": "boilerplate-nodejs-next",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "permissions:generate": "env-cmd -f .env npx tsx scripts/generate-route-permissions.ts",
    "permissions:watch": "env-cmd -f .env npx tsx scripts/generate-route-permissions.ts --watch",
    "dev": "concurrently \"pnpm run permissions:watch\" \"next dev --turbopack\"",
    "build": "pnpm permissions:generate && next build --turbopack",
    "start": "next start",
    "lint": "biome lint --write .",
    "format": "biome format --write .",
    "prepare": "husky",
    "db:seed": "env-cmd -f .env npx tsx db/seed.ts",
    "db:delete": "env-cmd -f .env npx tsx db/delete.ts",
    "db:generate": "env-cmd -f .env drizzle-kit generate",
    "db:migrate": "env-cmd -f .env drizzle-kit migrate",
    "db:studio": "env-cmd -f .env drizzle-kit studio",
    "db:query": "env-cmd -f .env tsx db/query.ts"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/match-sorter-utils": "^8.19.4",
    "@tanstack/react-query": "^5.87.1",
    "@tanstack/react-query-devtools": "^5.90.1",
    "@tanstack/react-table": "^8.21.3",
    "@tanstack/react-virtual": "^3.13.12",
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.44.5",
    "drizzle-seed": "^0.3.1",
    "drizzle-zod": "^0.8.3",
    "framer-motion": "^12.23.19",
    "immer": "^10.1.3",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.542.0",
    "next": "15.5.2",
    "next-auth": "^4.24.11",
    "next-themes": "^0.4.6",
    "nodemailer": "^7.0.6",
    "pg": "^8.16.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.62.0",
    "react-icons": "^5.5.0",
    "react-toastify": "^11.0.5",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@tailwindcss/postcss": "^4",
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20",
    "@types/nodemailer": "^7.0.1",
    "@types/pg": "^8.15.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "chokidar": "^4.0.3",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.4",
    "env-cmd": "^11.0.0",
    "glob": "^11.0.3",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4",
    "tsx": "^4.20.5",
    "tw-animate-css": "^1.3.8",
    "typescript": "^5",
    "typescript-eslint": "^8.42.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@10.15.1"
}
